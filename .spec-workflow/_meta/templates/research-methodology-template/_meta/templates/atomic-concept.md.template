---
# Atomic Concept Template (Zettelkasten Method)
# One concept = one file
# This is instantiated by HYPATIA during atomization (Task 1.3)

id: '{{atomic.id}}'  # Format: atomic-XXX-concept-slug
is_a: 'atomic/concept'
version: '1.0.0'
created: '{{timestamp}}'
author: 'HYPATIA'
source_id: '{{source.id}}'  # Reference to sources.yaml

# DUBLIN CORE
dublin_core:
  title: '{{atomic.title}}'
  creator: ['HYPATIA']
  date: '{{date}}'
  source: '{{source.title}}'  # Original paper/framework
  identifier: '{{source.doi}}'  # DOI or URL
  subject: ['{{concept.domain}}']
  description: '{{atomic.description}}'
  type: 'atomic-concept'
  format: 'text/markdown'
  language: 'es-ES'
  relation: 'Part of research-{{research.name}}'

# HKM
hkm:
  permalink: 'apps/research-{{research.name}}/02-atomics/concepts/{{atomic.id}}.md'
  parent: 'apps/research-{{research.name}}/01-literature/content/{{source.id}}.md'
  version: '1.0.0'
  tags:
    - '{{concept.domain}}'
    - 'atomic'
    - '{{research.name}}'

# ZETTELKASTEN METADATA
zettelkasten:
  concept_type: '{{concept.type}}'  # definition | principle | pattern | artifact | process
  granularity: 'atomic'  # atomic = one single idea
  context: '{{concept.context}}'

  # Relationships to other atomics (updated in Task 1.4)
  related_atomics:
    precedes: []       # IDs of concepts that this precedes
    follows: []        # IDs of concepts that this follows
    implements: []     # IDs of concepts that this implements
    extends: []        # IDs of concepts that this extends
    contradicts: []    # IDs of concepts that this contradicts
    complements: []    # IDs of concepts that this complements

# NEO4J MAPPING
neo4j:
  node_label: 'Concept'
  properties:
    id: '{{atomic.id}}'
    title: '{{atomic.title}}'
    type: '{{concept.type}}'
    domain: '{{concept.domain}}'
    source_id: '{{source.id}}'
    source_title: '{{source.title}}'
    created: '{{timestamp}}'

  # Relationships (populated from zettelkasten.related_atomics)
  relationships: []

# EMBEDDINGS
embeddings:
  model: 'qwen3-embedding'
  dimensions: 1536
  vector: null  # Populated by MORPHEUS (Task 3.5)
  indexed: false

